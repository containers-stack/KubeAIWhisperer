# Azure OpenAI Configuration
AZURE_OPENAAI_ENDPOINT="YOUR_AZURE_OPENAI_ENDPOINT_URL_HERE"
# Your Azure OpenAI API key
AZURE_OPENAI_API_KEY="YOUR_AZURE_OPENAI_API_KEY_HERE"
# Azure OpenAI API version
AZURE_OPENAI_VERSION="YOUR_AZURE_OPENAI_API_VERSION_HERE"
# Azure OpenAI deployment name
AZURE_OPENAI_DEPLOYMENT_NAME="YOUR_AZURE_OPENAI_DEPLOYMENT_NAME_HERE"

# Model Configuration
# Name of the GPT model
MODEL_NAME="YOUR_GPT_MODEL_NAME_HERE"
# Maximum number of tokens for model input
MAX_TOKENS="2000"

# MongoDB Configuration
# URI for connecting to MongoDB
MONGODB_URI="mongodb://localhost:27017"

# Other Configuration
# Interval in seconds for scanning Kubernetes deployments
SCAN_INTERVAL_SECONDS="600"
# Namespaces to be scanned (comma-separated)
LIST_NAMESPACE="default,test"
